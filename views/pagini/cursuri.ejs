<!DOCTYPE html>
<html>
  <head>
    <title>ÎnvățWeb - Lista Cursuri</title>
    <meta
      name="description"
      content="ÎnvățWeb. Cursuri Programare Web.
      Școală de programare pentru copilul tău.
      Profesori de programare dedicați. Cursuri la cel mai mic preț."
    />
    <%-include('../fragmente/head.ejs')-%>
  </head>
  <body>
    <%-include('../fragmente/header.ejs')-%>

    <div class="main-wrapper not-index">
      <main>
        <h2>Lista cursurilor oferite</h2>
        <h3>Filtrare</h3>

        <div class="sort-wrapper">
          <div class="row">
            <div class="col-sm-1">
              <button
                id="button-sort"
                class="btn btn-sm btn-secondary"
                data-sort="asc"
              >
                <i class="fa fa-angles-up"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="filter-wrapper">
          <div class="row">
            <div class="col-sm-6 filter-element form-group">
              <label for="filter_name" class="form-label">Nume</label>
              <input
                type="text"
                id="filter_name"
                name="filter_name"
                data-filter="nume"
                class="form-control"
              />
            </div>
            <div class="col-sm-6 filter-element form-group">
              <label for="filter_tema" class="form-label">
                Tema principala:
              </label>
              <input
                list="filter_tema_datalist"
                id="filter_tema"
                name="filter_tema"
                type="text"
                data-filter="tema"
                class="form-control"
              />
              <datalist id="filter_tema_datalist">
                <% locals.course_themes.forEach((theme)=> { %>
                <option value="<%-theme%>"></option>
                <% }) %>
              </datalist>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <label>Interval Pret Cursuri</label>
